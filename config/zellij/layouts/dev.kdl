// ============================================================================
// Development Layout - Three-Pane Workspace
// Purpose: Efficient development workflow with editor, terminal, and logs
// ============================================================================

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    // Development tab with 3-pane layout
    tab name="dev" focus=true {
        pane split_direction="vertical" {
            // Left pane: Editor (60% width)
            pane size="60%" name="editor" focus=true {
                // Optionally auto-launch editor:
                // command "nvim"
            }

            // Right side: Terminal and Logs (40% width)
            pane split_direction="horizontal" size="40%" {
                // Top right: Terminal for commands (60% height)
                pane size="60%" name="terminal"

                // Bottom right: Logs/Tests/Output (40% height)
                pane size="40%" name="logs"
            }
        }
    }
}

// ============================================================================
// Usage
// ============================================================================
//
// Load this layout:
//   zellij --layout dev
//   zellij -l dev
//
// Typical workflow:
//   1. Editor pane (left): nvim, emacs, or your preferred editor
//   2. Terminal pane (top right): git commands, build, run
//   3. Logs pane (bottom right): test output, tail -f logs, htop
//
// Navigation:
//   Ctrl+g + h/j/k/l : Navigate between panes
//   Ctrl+g + z       : Toggle pane fullscreen
//   Ctrl+g + x       : Close current pane
//
// Layout structure:
//   ┌─────────────────────────────────────┐
//   │ Tab Bar                             │
//   ├────────────────────┬────────────────┤
//   │                    │                │
//   │                    │   Terminal     │
//   │                    │                │
//   │     Editor         ├────────────────┤
//   │     (60%)          │                │
//   │                    │   Logs         │
//   │                    │                │
//   ├────────────────────┴────────────────┤
//   │ Status Bar                          │
//   └─────────────────────────────────────┘
//
// Customization:
//   To auto-launch applications, uncomment "command" lines and specify:
//     command "nvim"      # Launch Neovim in editor pane
//     command "htop"      # Launch htop in logs pane
//
// ============================================================================
